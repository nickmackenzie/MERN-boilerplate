<% if (user) { %>


<% snip.forEach(function(t) { %>
<div class="item">
    <form action="/edit/<%= t.id %>" action="GET"><button type="submit"
            id="edit-btn"><i class="far fa-edit"></i></button>
    </form>
    <div id="code-box" class="box">
        <form action="/snippets/<%= t.id %>?_method=DELETE" class="delete-form"
            method="POST">
            <button id="circle-btn" class="delete is-medium delete-btn"
                href="/snippets/<%= t.id %>">
                </i></button>
        </form>

        <div id="editor" class="edit-form">
            <form><input type="text" name="name" value="<%= t.name %>">
                <textarea name="snippet" cols="30"
                    rows="10"><%= t.snippet %></textarea>
                <input type="submit">
            </form>
        </div>
        <div class="block-title">
            <img class="icon" src="/images/<%= t.language %>.svg" alt="">
            <span id=snippet-data name="name"><%= t.name %></span></div>
        <div class="code-block">
            <pre><code name="snippet" data-lang="<%= t.language %>"><%= t.snippet %></code></pre>

        </div>



    </div>
</div>



<% }) %>
<% } else { %>
<h1>Login to see Snippets</h1>
<% } %>